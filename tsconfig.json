{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["es2019", "dom"],
      "moduleResolution": "node",
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "strict": false,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
    },
    "include": [
      "packages/*",
      "tests",
      "node_modules/@open-wc/**/*.js"
    ],
    "exclude": [
      "node_modules/!(@open-wc)"
    ]
  }
